@echo off
REM ================================================================
REM  TEMPLATE: Copy this to set-secrets.bat and fill in your values
REM  DO NOT commit set-secrets.bat to git!
REM ================================================================
cd /d "%~dp0"
echo Setting Discord bot secrets in Fly.io...

flyctl secrets set ^
    DISCORD_BOT_TOKEN="YOUR_BOT_TOKEN_HERE" ^
    DISCORD_CLIENT_ID="YOUR_CLIENT_ID_HERE" ^
    DISCORD_GUILD_ID="YOUR_GUILD_ID_HERE" ^
    NEXT_PUBLIC_CONVEX_URL="YOUR_CONVEX_URL_HERE" ^
    WEBSITE_URL="YOUR_WEBSITE_URL_HERE"

echo.
echo Secrets updated! Bot will restart automatically.
pause
