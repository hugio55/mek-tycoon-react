'use client';

import { useEffect } from 'react';
import { clearSession } from '@/lib/walletSession';

/**
 * SessionCleanup Component
 * Runs once on app mount to clear any old encrypted sessions
 * This ensures we always use fresh localStorage data (walletAddress/stakeAddress)
 * instead of potentially stale encrypted session data
 */
export function SessionCleanup() {
  useEffect(() => {
    // Clear encrypted session once on mount
    clearSession();
    console.log('[ðŸ§¹CLEANUP] Cleared encrypted session - using fresh localStorage data');
  }, []);

  return null; // This component doesn't render anything
}
